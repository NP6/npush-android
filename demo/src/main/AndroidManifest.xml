<?xml version="1.0" encoding="utf-8"?><manifest xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
package="com.np6.demo">

<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.NPushApplication">

    <service
        android:name=".services.MyFirebaseMessagingService"
        android:exported="false">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
    </service>

    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:theme="@style/Theme.NPushApplication.NoActionBar">
        <intent-filter>
            <category android:name="android.intent.category.DEFAULT" />
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />

            <data
                android:host="npush"
                android:pathPattern="/main"
                android:scheme="app" />
        </intent-filter>
    </activity>

    <activity
        android:name=".ProductsActivity"
        android:exported="true"
        android:theme="@style/Theme.NPushApplication.NoActionBar">
        <nav-graph android:value="@navigation/nav_graph_products" />
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="npush"
                android:pathPattern="/products"
                android:scheme="app" />
        </intent-filter>
    </activity>

    <activity
        android:name=".Product1Activity"
        android:exported="true"
        android:theme="@style/Theme.NPushApplication.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="npush"
                android:pathPattern="/product1"
                android:scheme="app" />
        </intent-filter>
    </activity>

    <activity
        android:name=".Product2Activity"
        android:exported="true"
        android:theme="@style/Theme.NPushApplication.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="npush"
                android:pathPattern="/product2"
                android:scheme="app" />
        </intent-filter>
    </activity>

    <activity
        android:name=".Product3Activity"
        android:exported="true"
        android:theme="@style/Theme.NPushApplication.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="npush"
                android:pathPattern="/product3"
                android:scheme="app" />
        </intent-filter>
    </activity>

    <meta-data
        android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@mipmap/ic_launcher" />
    <meta-data
        android:name="com.google.firebase.messaging.default_notification_color"
        android:resource="@mipmap/ic_launcher" />

</application>

</manifest>

